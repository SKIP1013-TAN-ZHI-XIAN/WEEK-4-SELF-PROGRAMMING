package selfProgramming;

import java.util.Scanner;

class Boolean {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		boolean done = false;
		System.out.println(done);  // Outputs false
		
		System.out.println();
		
		Scanner scanMe = new Scanner(System.in);
		
		System.out.print("Is the work being finished? True-Yes False-No :");  
		boolean finish = scanMe.nextBoolean();
		if (finish == true)
		{
			System.out.println("Finish = true"); 
		}
		else 
		{
			System.out.println("Not yet finish = false");
		}
		
		System.out.println();
		
		System.out.print("Is the light bulb being switch? True-Yes False-No :");  
		boolean bright = scanMe.nextBoolean();  
		if (bright == true) 
		{  
			System.out.println("The light bulb is on");  
		} 
		else
		{  
			System.out.println("The light bulb is off");  
		}
	}

}
